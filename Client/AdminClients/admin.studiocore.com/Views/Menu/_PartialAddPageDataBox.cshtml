@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@model Domain.DTOModels.PagesModels
@section js{
    <script src="/Content/js/System/pages_add.js"></script>
}
<form class="layui-form margin_top layui-form-pane" method="post" action="/Menu/AddDataPages">
    <div class="layui-field-box">
        <div class="layui-form-item">
            <label class="layui-form-label">名称</label>
            <div class="layui-input-block">
                <input type="text" name="PageTitle" id="PageTitle" placeholder="请输入名称" class="layui-input" value="@Model.PageTitle">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">图标</label>
            <div class="layui-input-block">
                <select name="PageIcon" id="PageIcon">
                    @foreach (var item in Model.GetIConID)
                    {
                        if (Model.PageIcon == Convert.ToInt32(item.Split('_')[0]))
                        {
                            <option selected="selected" value="@Convert.ToInt32(item.Split('_')[0])">@item</option>
                        }
                        else
                        {
                            <option value="@Convert.ToInt32(item.Split('_')[0])">@item</option>
                        }
                    }

                </select>

            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">父级ID</label>
            <div class="layui-input-block">
                <select name="ParentLevel" id="ParentLevel">
                    @foreach (var item in Model.GetParentID)
                    {
                        if (Model.ParentLevel == Convert.ToInt32(item.Split('_')[0]))
                        {
                            <option selected="selected" value="@Convert.ToInt32(item.Split('_')[0])">@item</option>
                        }
                        else
                        {
                            <option value="@Convert.ToInt32(item.Split('_')[0])">@item</option>
                        }
                    }

                </select>

            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">类型</label>
            <div class="layui-input-block">
                <select name="PageTypes" id="PageTypes">
                    @for (int i = 0; i < Infrastructure.Utility.EnumCore.GetPageTypeEnum().Count; i++)
                    {
                        if (Model.PageTypes == i)
                        {
                            <option selected="selected" value="@i">@Infrastructure.Utility.EnumCore.GetPageTypeEnum()[i]</option>
                        }
                        else
                        {
                            <option value="@i">@Infrastructure.Utility.EnumCore.GetPageTypeEnum()[i]</option>
                        }


                    }
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">排序</label>
            <div class="layui-input-block">
                <input type="text" name="PageSort" id="PageSort" placeholder="请输入正序数值" class="layui-input" value="@Model.PageSort">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">链接</label>
            <div class="layui-input-block">
                <input type="text" name="PagePathUrl" id="PagePathUrl" placeholder="请输入链接" class="layui-input" value="@Model.PagePathUrl">
            </div>
        </div>

        <div class="layui-form-item" style="margin-top:10%;">
            <div class="layui-input-block margin_left_30" style="text-align:center;margin-left:0;">
                <button type="button" class="layui-btn" lay-submit lay-filter="sub" id="btn_sub">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>

    </div>

</form>
