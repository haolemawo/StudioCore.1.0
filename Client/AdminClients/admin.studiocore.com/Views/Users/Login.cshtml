@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section css{ 
}
@section js{ 
<script src="/Content/js/System/login.js"></script>
}
<form class="layui-form" method="post" action="/Users/LoginResult" lay-filter="login">
    <div class="layui-form-item">
        <div class="layui-input-block content-input">
            <input type="text" name="UserName" id="UserName" placeholder="请输入账户名" class="layui-input" lay-verify="required"><span class="versym"><i class="layui-icon">&#x1006;</i></span>

        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block content-input">
            <input type="password" name="UserPwd" id="UserPwd" placeholder="请输入密码" autocomplete="off" class="layui-input" lay-verify="required"><span class="versym"><i class="layui-icon">&#x1006;</i></span>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block content-input">
            <input type="text" name="ValidateCode" id="ValidateCode" maxlength="4" placeholder="验证码" autocomplete="off" class="layui-input content-code" lay-verify="required"><span class="versym" style="margin-top:5px; margin-left:-20px;"><i class="layui-icon">&#x1006;</i></span>
            <div class="content-codeimg">
                <img id="imgcode" class="img-code" src="/Users/GetCodeImg?t=@DateTime.Now.Minute" title="看不清，点击换一张" alt="验证码" />
            </div>

        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block content-input content-button">
            <input type="submit" class="layui-btn" lay-submit lay-filter="sub" id="btn_sub" value="登录" />
            <input type="button" class="layui-btn layui-btn-primary" id="btn_reg" value="找回密码" />
        </div>
    </div>
</form>
